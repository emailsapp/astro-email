---
const props = Astro.props;
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
      body {
        margin: 0;
        width: 100%;
        height: 100%;
      }
      .banner {
        display: block;
        position: relative;
        font-family: sans-serif;
        font-weight: normal;
        overflow: hidden;
        cursor: pointer;
        text-decoration: none;
      }
    </style>

    <slot name="head" />
  </head>

  <body>
    <a href="#clicktag" class={[props.class, 'banner'].join(" ")} id="clicktag" target="_blank">
      <slot />
    </a>

    <script is:inline type="application/javascript">
      var getUriParams = (() => {
        var query_string = {};
        var query = window.location.search.substring(1);
        var parmsArray = query.split("&");
        if (parmsArray.length <= 0) return query_string;
        for (var i = 0; i < parmsArray.length; i++) {
          var pair = parmsArray[i].split("=");
          var val = decodeURIComponent(pair[1]);
          if (val !== "" && pair[0] !== "") query_string[pair[0]] = val;
        }
        return query_string;
      })();

      const clicktag = document.getElementById("clicktag");
      const href = getUriParams.clicktag || getUriParams.clicktag1;
      const target = getUriParams.target || getUriParams.target1;

      if (clicktag && href) {
        clicktag.setAttribute("href", href);
      }

      if (clicktag && target) {
        clicktag.setAttribute("target", target);
      }
    </script>
  </body>
</html>
